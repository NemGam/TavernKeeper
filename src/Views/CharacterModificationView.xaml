            <TextBox x:Name="InitiativeTB"
                     Width="78" Height="69"
                     FontSize="50" FontWeight="Bold" 
                     IsEnabled="False"
                     Text="{Binding Initiative, Mode=OneWay}" Canvas.Left="568" Canvas.Top="279" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBox x:Name="SpeedTB"
                     Background ="#d9d9d9" 
                     Width="78" Height="69"
                     MaxLength="2"
                     InputScope="Number"
                     FontSize="45"
