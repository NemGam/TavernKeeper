                      IsChecked="{Binding 
                                Path=ProficientSavingThrows,
                                Converter={StaticResource FlagsConverter2},
                                ConverterParameter={x:Static l:SavingThrows.Strength}}" Canvas.Left="201" Canvas.Top="416"/>
