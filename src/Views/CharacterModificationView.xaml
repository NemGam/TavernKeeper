                     IsReadOnly="True" IsEnabled="False"
                     FontSize="30" FontWeight="Bold"
                     Text="{Binding ConstitutionMod, Mode=OneWay}" Canvas.Left="91" Canvas.Top="600"/>
            <TextBox x:Name="ConstitutionTB"
                     Background ="#d9d9d9" 
                     Width="49" Height="24"
                     MaxLength="2"
                     InputScope="Number"
                     FontSize="16"
