            <TextBox x:Name="HitDiceTB"
                Background ="#d9d9d9" 
                Width="96" Height="18"
                MaxLength="5"
                Text="{Binding HitDice}" Canvas.Left="494" Canvas.Top="638" HorizontalAlignment="Center" VerticalAlignment="Top"/>

            <!--Saving Throws (ST)-->
